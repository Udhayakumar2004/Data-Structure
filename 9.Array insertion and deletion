#include<stdio.h>

#include<stdlib.h>

int a[10],n=5;

void input_data()

{

	int i;	printf("enter array elements:");

	for(i=0;i<n;i++)

		scanf("%d",&a[i]);

}

void output_data()

{

	int i;

	printf("the array elements\n");

	for(i=0;i<n;i++)

	printf("%d\t",a[i]);

}

void insertion()

{

	int i,element,pos;

	printf("enter element and pos:");

	scanf("%d %d",&element,&pos);

	for(i=n;i>pos;i--)

	a[i]=a[i-1];

	a[pos]=element;

}

void deletion()

{

	int i,pos;

	printf("enter  pos:");

	scanf("%d %d",&pos);

	for(i=pos;i<n-1;i++)

	a[i]=a[i+1];

	

	

}

int main()

{

int choice;

do{

	printf("\n main menu\n");

	printf("\n 1.input data");

    printf("\n 2.output data");

	printf("\n 3.insertion");

	printf("\n 4.deletion ");

	printf("\n 5.exit ");

	printf("\n enter your choice");

	scanf("%d",&choice);

	

	switch(choice)

	{

		case 1:input_data();break;

		case 2:output_data();break;

		case 3:insertion();break;

		case 4:deletion();break;

		case 5:exit(0);break;

		default:printf("enter the choice between 1 to 5");

			

	}

}	while(choice>=1 && choice<=5);

return 0;

}
